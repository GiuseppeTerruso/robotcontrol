<!-- This xml refers to a schema for possible robots to control. -->
<!-- For a robot we may expose up to left and right arm and left and right hand. 
	 For each limb, we need to know if it implements "obctacle avoidance and path planning"
	 algorithms to authomatically avoid entanglements or not (in this second case, entanglments
	 avoidance should be addressed during sign reproduction).
-->
<robot>
	<information type="array">
		<!-- For each joint, we need to know if it is implemented in the robot, its working range (in percentage from 0 to 1), 
			 its rest position (only for ab-adduction or in any case when the joint working range is from -1 to 1) 
			 and where it is located with respect to the others 
			 (i.e., which is the code to which we have to send the commands for that joint). 
        -->
		<value>implemented</value>
		<value>minrange</value>
		<value>maxrange</value>
		<value>restposition</value>
		<value>code</value>
	</information>

	<hands>
		<joints type="array">
			<!-- This array specifies the joints we are taking into consideration for each hand. -->
			<value>thumb_PIP</value>
			<value>thumb_MCP</value>
			<value>thumb_MCP_A</value>
			<value>pinky_PIP</value>
			<value>pinky_MCP</value>
			<value>pinky_MCP_A</value>
			<value>ring_PIP</value>
			<value>ring_MCP</value>
			<value>ring_MCP_A</value>
			<value>middle_PIP</value>
			<value>middle_MCP</value>
			<value>middle_MCP_A</value>
			<value>index_PIP</value>
			<value>index_MCP</value>
			<value>index_MCP_A</value>
			<value>thumb_CP</value>
			<value>pinky_CP</value>
			<value>ring_CP</value>
			<value>middle_CP</value>
			<value>index_CP</value>
			<value>palm</value>
			<value>palm_E</value>
			<value>wrist</value>
		</joints>

		<left type="array" kinematic="False">
			<!-- This array specifies the joints we are taking into consideration for left hand. -->
			<!-- e.g.
			<thumb_PIP>
				<implemented>True</implemented>
				<minrange>0</minrange>
				<maxrange>180</maxrange>
				<restposition>0</restposition>
				<code>0</code>
			</thumb_PIP>
			-->
			<!-- ... -->
		</left>

		<right type="array" kinematic="False">
			<!-- This array specifies the joints we are taking into consideration for right hand. -->
			<!-- e.g.
			<thumb_PIP>
				<implemented>True</implemented>
				<minrange>0</minrange>
				<maxrange>180</maxrange>
				<restposition>0</restposition>
				<code>0</code>
			</thumb_PIP>
			-->
			<!-- ... -->
		</right>
	</hands>

	<arms>
		<joints type="array">
			<!-- This array specifies the joints we are taking into consideration for each arm. -->
			<!-- e.g.
			<value>elbow</value>
			-->
			<!-- ... -->
		</joints>

		<left type="array" kinematic="False">
			<!-- This array specifies the joints we are taking into consideration for left arm. -->
			<!-- e.g.
			<elbow>
				<implemented>True</implemented>
				<minrange>0</minrange>
				<maxrange>180</maxrange>
				<restposition>0</restposition>
				<code>0</code>
			</elbow>
			-->
			<!-- ... -->
		</left>

		<right type="array" kinematic="False">
			<!-- This array specifies the joints we are taking into consideration for right arm. -->
			<!-- e.g.
			<elbow>
				<implemented>True</implemented>
				<minrange>0</minrange>
				<maxrange>180</maxrange>
				<restposition>0</restposition>
				<code>0</code>
			</elbow>
			-->
			<!-- ... -->
		</right>
	</arms>
</robot>
